#' Title
#'
#' @param prefix
#'
#' @import reticulate
#' @import dplyr
#' @return
#' @export
#' @examples
create_envconda <- function(prefix)
{

  conda_create(envname = prefix)
  conda_install(envname = prefix,packages = "conda")
  conda_install(envname = prefix,packages = "blast",channel="bioconda",version="2.13.0")
  package = py_list_packages(envname = prefix)
  package = package %>% filter(package = "blast")
  cat(package$requirement)


}
